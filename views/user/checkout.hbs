<script>

  function placeOrder() {

    Swal.fire({
      title: 'Are you sure?',
      text: "This order will palce now!",
      icon: 'question',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
    }).then((result) => {

      if (result.isConfirmed) {
        
        const cartItems = JSON.parse('{{{json cartItems}}}')
        const items = cartItems.map(item => {
            return {
              product_id: item.productId,
              quantity: item.quantity,
              price: item.price,
              item_total: item.item_total,
            }
        })

        const data = {
          payment_method: $('input[name=payment_method]:checked').attr('id'),
          shipping_address: '{{shipping_address._id}}',
          billing_address: '{{billing_address._id}}',
          discounts: 0,
          shipping_charge: 0,
          order_items: items,
          order_status: 'pending',
        }

        $.ajax({
          type: 'POST',
          url: '/place-order',
          data: data,
          success: function(response) {
            console.log(response)
            
            if(response.success && response.values.status === 'created') {
              razorpayPayment(response.values)
            }else if (response.success && !response.values.status) {
              handleOrderResponse(response)
            } else {
              Toast(2500,response.icon, response.msg);
            }
          }
        })

      }
    })
    
  }

  function razorpayPayment(order) {
    
    // Open Razorpay Checkout
    const options = {
      key: order.RAZORPAY_KEY_ID,
      amount: order.amount,
      currency: order.currency,
      name: '{{billing_address.fullname}}',
      description: 'Test Transaction',
      order_id: order.id,
      //callback_url: 'http://localhost:3000/payment-success', // Your success URL
      prefill: {
        name: '{{user.fullname}}',
        email: '{{user.email}}',
        contact: '{{user.phone}}',
      },
      theme: {
        color: '#F37254'
      },
      handler: function(response) {
        response.order_no = order.receipt
        console.log(response);
        $.ajax({
          type: 'POST',
          url: '/verify-payment',
          data: response,
          success: function(response) {
            handleOrderResponse(response);
          }
        })
      }
    };

    

    const rzp = new Razorpay(options);
    rzp.open();
 
  }

  function handleOrderResponse(response) {
    Swal.fire({
      title: 'Order Placed!',
      text: 'Your order has been placed successfully.',
      icon:'success',
      showDenyButton: true,
      confirmButtonText: 'View Order',
      denyButtonText: 'Continue Shopping',
      customClass:{
        popup: 'alert-dialog',
        confirmButton: 'alert-button',
        denyButton: 'alert-button',
      }
    }).then((result) => {
      $('.bubble').addClass('hide');
      if (result.isConfirmed) {
        window.location.href = `/user/view-order?id=${response.values}`;
      } else if (result.isDenied) {
        window.location.href = '/collections';
      }
    });
  }
  

  const status = '{{acc_info.status}}'

  if(status.length){
    Toast(2000,'{{acc_info.icon}}','{{acc_info.msg}}')
    if(status == 201){
      $.ajax({
        type: 'GET',
        url: `/clear-session/${status}?redirect=true`,
        success: function(res){
        },
      })
    }
  }

</script>